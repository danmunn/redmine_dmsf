let to = $('#email_to');
let text = to.val();
<% @principals.each do |p| %>
  if(text.indexOf("<%= p.mail %>") < 0){
    if(text.length > 0){
        text += ', '
    }
    text += "<%= p.mail %>"
  }
<% end %>
to.val(text);

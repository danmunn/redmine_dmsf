  <hr>
  <p>
    <strong><%= l(:menu_dmsf) %></strong>
  </p>
  <div class="attachments dmsf-parent-container">
    <% # DMS documents & links %>
    <table>
        <% links.each do |dmsf_file, link, _| %>
        <tr>
          <%= render partial: 'dmsf_files/link', locals: { dmsf_file: dmsf_file, link: link } %>
        </tr>
        <% end %>
    </table>
